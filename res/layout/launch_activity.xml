<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_thunder_storm" >

   
    
    <TextView 
        android:id="@+id/xin"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:textSize="36sp"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:text="@string/launch_xin"/>
    <TextView
        android:id="@+id/lian"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:textSize="32sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/xin"
        android:textColor="#fff"
        android:text="@string/launch_lian"
        android:gravity="center"
        android:background="@drawable/launch_liantext_bg" />
    <TextView 
        android:id="@+id/weather"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/lian"
        android:textColor="#fff"
        android:text="@string/launch_weather"/>
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"
        android:textColor="#fff"
        android:text="@string/author"/>
</RelativeLayout>
